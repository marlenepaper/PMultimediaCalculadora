<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="32dp"
        >

        <TextView
            android:id="@+id/textViewExpresionMatematica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:textColor="@color/button_transparent_white_70"
            android:textSize="30dp"
            android:gravity="end"
            android:layout_marginBottom="-15dp"
            android:text="" />

        <TextView
            android:id="@+id/textViewResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:gravity="end"
            android:text="0"/>

        <LinearLayout
            android:id="@+id/calculatorbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAC"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_70"
                    android:fontFamily="@font/intermedium"
                    android:text="AC"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/buttonCambioSigno"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_70"
                    android:fontFamily="@font/intermedium"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/buttonPorcentaje"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_70"
                    android:fontFamily="@font/intermedium"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonDividir"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:fontFamily="@font/intermedium"
                    android:text="/"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="7"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="8"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="9"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonMultiplicar"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:fontFamily="@font/intermedium"
                    android:text="x"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="4"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="5"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="6"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonRestar"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:fontFamily="@font/intermedium"
                    android:text="-"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="1"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="2"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="3"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonSumar"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:fontFamily="@font/intermedium"
                    android:text="+"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="3.5"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="0"
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonPunto"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_transparent_white_10"
                    android:fontFamily="@font/intermedium"
                    android:text="."
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonIgual"
                    android:layout_width="45dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_background"
                    android:fontFamily="@font/intermedium"
                    android:text="="
                    android:textColor="@color/button_text"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>